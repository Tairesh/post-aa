                "Не вмешиваться в дела Республики Башкортостан":
                    $ parties_power['social'] += 6
                    $ parties_power['promoskow'] -= 2
                    $ parties_power['fascist'] -= 3
                    $ parties_power['liberal'] -= 1
                    $ bashkiria_support -= 20
